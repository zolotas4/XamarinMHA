<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.RegisterPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="First Name" />
                <Entry x:Name="firstNameEntry" Placeholder="Enter first name" />
                <Label Text="Last Name" />
                <Entry x:Name="lastNameEntry" Placeholder="Enter last name" />
                <Label Text="Email" />
                <Entry x:Name="emailEntry" Placeholder="Enter email" Keyboard="Email"/>
                <Label Text="Date of Birth" />
                <DatePicker x:Name="dobEntry" Format="dd-MM-yyyy"/>
                <Label Text="Phone" />
                <Entry x:Name="phoneEntry" Placeholder="Enter phone" Keyboard="Numeric"/>
                <Label Text="Username" />
                <Entry x:Name="usernameEntry" Placeholder="Enter username" />
                <Label Text="Password" />
                <Entry x:Name="passwordEntry" Placeholder="Enter password" IsPassword="true" />
                <Button Text="Register" Clicked="CompleteRegistrationButtonClicked"/>
                <Label x:Name="completeRegistrationButton" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>