<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.UserDetails"
             Style="{StaticResource backImage}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="First Name" />
            <Entry x:Name="firstNameEntry" Text="{Binding FirstName}"/>
            <Label Text="Last Name" />
            <Entry x:Name="lastNameEntry" Text="{Binding LastName}"/>
            <Label Text="Email" />
            <Entry x:Name="emailEntry" Keyboard="Email" Text="{Binding Email}"/>
            <Label Text="Date of Birth" />
            <DatePicker x:Name="dobEntry" Format="dd-MM-yyyy" />
            <Label Text="Phone" />
            <Entry x:Name="phoneEntry" Keyboard="Numeric" Text="{Binding Phone}"/>
            <Label Text="Username" />
            <Entry x:Name="usernameEntry" Text="{Binding UserName}"/>
            <Label Text="Password" />
            <Entry x:Name="passwordEntry" IsPassword="true" Text="{Binding Password}"/>
            <Button Text="Save" Clicked="UpdateDetailsButtonClicked"/>
            <Label x:Name="SaveDetailsButton" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>